<resources>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="StatsActivityTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary_light</item>
    </style>

    <style name="openSans">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!--TITLE-->
    <style name="NameTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="WorldRankColumnStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:radius">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ScoreTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:alpha">0.4</item>
        <item name="android:radius">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--ITEM-->
    <style name="QuestionStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:radius">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ScoreItemStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
        <item name="android:radius">8dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CurrentScoreTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:radius">8dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StatsItemStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="radio">
        <item name="colorAccent">@color/white_smoke</item>
        <item name="android:textColorSecondary">@color/green</item>
        <item name="colorControlNormal">@color/purple</item>
    </style>

    <!--BUTTONS-->
    <style name="ButtonScoreStyle">
        <item name="android:background">@drawable/style_radius_button_sel</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--ERRORS-->
    <style name="ErrorMessageStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">8dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ErrorTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:radius">8dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!--FIREBASE-->
    <style name="RandomTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>

        <item name="colorControlNormal">@color/powder_blue</item>
        <item name="colorControlActivated">@color/dark_salmon</item>
        <item name="colorControlHighlight">@color/dark_orange</item>
        <item name="android:windowBackground">@color/deep_orange_200</item>
    </style>

</resources>
